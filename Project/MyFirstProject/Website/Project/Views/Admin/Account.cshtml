@{
    ViewBag.Title = "Account";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<head>
    <link href="~/content/bootstrap.min.css" rel="stylesheet">
</head>
<body style="background-color:orange">
    </body>
<br/> <br/>
<fieldset style="width:80%;height:400px">
    <legend><b>PROFILE</b></legend>

	<form>
		<br/>
		<table cellpadding="0" cellspacing="0" style="background-color:rgba(0,0,0,0.5);height:300px;width:350px;color:white;border-style:inset">
			<tr><td colspan="3"></td></tr>
            <tr align="center">
				<td>Name</td>
				<td>:</td>
				<td>@Model.Name</td>
			</tr>		
			<tr><td colspan="3"></td></tr>
            <tr align="center">
				<td>Email</td>
				<td>:</td>
				<td>@Model.Email</td>
			</tr>		
			<tr><td colspan="3"></td></tr>
            <tr align="center">
				<td>Gender</td>
				<td>:</td>
				<td>@Model.Gender</td>
			</tr>
			<tr><td colspan="3"></td></tr>
            <tr align="center">
				<td>Date of Birth</td>
				<td>:</td>
				<td>@Model.DateOfBirth</td>
			</tr>
            <tr><td colspan="3"></td></tr>
		</table>

        <a href='@Url.Action("EditAccount", "Admin")' style="color:red">
            Edit Profile
        </a>

	</form>
    <hr>
