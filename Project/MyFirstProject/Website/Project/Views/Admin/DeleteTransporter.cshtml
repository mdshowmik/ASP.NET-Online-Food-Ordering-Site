@model Project.Entity.Transporter

@{
    ViewBag.Title = "DeleteTransporter";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body style="background-color:orange">
    </body>
<h2 style="text-align:center;">Are you sure to delete this user?</h2>
<br>
<fieldset style="width:80%;height:400px">
    <legend><b>USER | DELETE</b></legend>
    <br/>
    <form action="/Admin/DeleteTransporter?email=@Model.Email" method="post">
    <table width="60%" height="250px" cellpadding="0" cellspacing="0" style="background-color:rgba(0,0,0,0.5);color:white;border-style:inset;text-align:center">
        <tr><td colspan="4"></td></tr>
        <tr>
            <td>Name</td>
            <td>:</td>
            <td>@Model.Name</td>
        </tr>	            
        <tr><td colspan="4"></td></tr>
        <tr>
            <td>Email</td>
            <td>:</td>
            <td>@Model.Email</td>
        </tr>		
        <tr><td colspan="4"></td></tr>			
        <tr>
            <td>Gender</td>
            <td>:</td>
            <td>@Model.Gender</td>
        </tr>
        <tr><td colspan="4"></td></tr>
        <tr>
            <td>Date of Birth</td>
            <td>:</td>
            <td>@Model.DateOfBirth</td>
        </tr>
        <tr><td colspan="4"></td></tr>
        <tr>
            <td>Status</td>
            <td>:</td>
            <td>@Model.Status</td>
        </tr>
    </table>
        <br>	
    <hr/> 
 
        <input type="submit" value="Delete" style="width:100px;color:orangered"/>
        <a href="/Admin/Searchtransporter?id=0" style="color:red">Back to Search</a>
    </form>    
    <br/><br/>
</fieldset>

