@model Project.Entity.Restaurant
@{
    ViewBag.Title = "CreateRestaurant";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body style="background-color:orange">
    </body>
<fieldset style="width:50%;height:500px">
    <legend><b>RESTAURANT | CREATE</b></legend>
    <br/>
    <form action="/Admin/CreateRestaurant" method="post">   
    <table width="60%" height="250px" cellpadding="0" cellspacing="0" style="background-color:rgba(0,0,0,0.5);color:white;border-style:inset;text-align:center">
            @Html.ValidationSummary()
            <tr><td colspan="4"></td></tr>
            <tr>
                <td>Name</td>
                <td>:</td>
                <td><input name="name" type="text" value="" style="color:black"></td>
                <td></td>
            </tr>
            <tr><td colspan="4"></td></tr>
            <tr>
                <td>Email</td>
                <td>:</td>
                <td>
                    <input name="email" type="text" value="" style="color:black">
                    <abbr title="hint: sample@example.com"><b>i</b></abbr>
                </td>
                <td></td>
            </tr>

            <tr><td colspan="4"></td></tr>
            <tr>
                <td>Status</td>
                <td>:</td>
                <td>
                    <select name="status" style="color:black">
                        <option></option>
                        <option value="Active" >Active</option>
                        <option value="Pending">Pending</option>
                        <option value="Blocked">Blocked</option>
                    </select>
                </td>
                <td></td>
            </tr>
        </table>
        <br>
        <hr>
        <input type="submit" value="Save" style="width:100px;color:orangered">
        <a href="/Admin/SearchRestaurant" style="color:red">Back to Search</a>
    </form>
</fieldset>

