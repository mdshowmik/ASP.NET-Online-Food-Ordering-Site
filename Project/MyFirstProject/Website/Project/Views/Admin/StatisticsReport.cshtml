@{
    ViewBag.Title = "StatisticsReport";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<body style="background-color:orange">
    </body>
 <img src="@Url.Action("StatisticsChart")" style="border:5px inset;border-color:red">
<br><br>
<fieldset style="width:50%">
    <table width="100%" cellpadding="0" cellspacing="0" style="background-color:rgba(1, 0, 0,0.5);color:white;text-align:center;border-style:inset">
        <tr>
            <td>
                <b>USER | STATISTICS</b>
            </td>
            <td align="right">
                <input type="submit" value="Print" style="color:orangered"/>
            </td>
        </tr>
    </table>

<table border="1" width="100%" cellpadding="10px" style="background-color:rgba(255,165,0,0.7);color:white">    
    <tr style="background-color:rgba(0,0,0,0.5)">
        <th align="left">ROLE</th>
        <th align="center" width="110">NO OF USERS</th>
    </tr>
    
     <tr style="background-color:rgba(0,0,0,0.5)">
        <th align="left">Admin</th>
        <th align="center" width="110">@ViewBag.adminNo</th>
    </tr>

     <tr style="background-color:rgba(0,0,0,0.5)">
        <th align="left">Customer</th>
        <th align="center" width="110">@ViewBag.customerNo</th>
    </tr>

     <tr style="background-color:rgba(0,0,0,0.5)">
        <th align="left">Trasporter</th>
        <th align="center" width="110">@ViewBag.transporterNo</th>
    </tr>

    <tr style="background-color:rgba(0,0,0,0.5)">
        <td align="right"><b>Total</b></td>
        <td align="center"><b> @ViewBag.userNo</b></td>        
    </tr>
</table>
    </fieldset>
<br>
<hr>
<br>
<fieldset style="width:50%">
    <table width="100%" cellpadding="10" cellspacing="0" style="background-color:rgba(0, 0, 0,0.5);color:white;text-align:center;border-style:inset">
        <tr>
            <td>
                <b>RESTAURANT | STATISTICS</b>
            </td>
            <td align="right">
                <input type="submit" value="Print" style="color:orangered"/>
            </td>
        </tr>
    </table>

<table border="1" width="100%" cellpadding="10px" style="background-color:orange;color:white">    
     <tr style="background-color:rgba(0,0,0,0.5)">
        <th align="left"></th>
        <th align="center" width="110">NO OF RESTAURANTS</th>
    </tr>

     <tr style="background-color:rgba(0,0,0,0.5)">
        <th align="left">Retuarant</th>
        <th align="center" width="110">@ViewBag.restuarantNo</th>
    </tr>

     <tr style="background-color:rgba(0,0,0,0.5)">
        <td align="right"><b>Total</b></td>
        <td align="center"><b> @ViewBag.restuarantNo</b></td>        
    </tr>
</table>
    </fieldset>
