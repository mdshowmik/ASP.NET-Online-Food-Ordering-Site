@{
    ViewBag.Title = "SearchTransporter";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@ViewBag.success
<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body style="background-color:orange">
    </body>
<fieldset style="width:80%">
    <legend>
        <b>TRANSPORTER | SEARCH</b>
    </legend>
    <form action="/Admin/SearchTransporter" method="post">
    Filter By
    <select name="filter">
        <option value="any">Any</option>
        <option value="name">Name</option>
        <option value="email">Email</option>
        <option value="status">Status</option>
    </select>
    <input type="text" name="search">
    <input type="submit" value="Search" style="width:100px;color:orangered"/>
    <br/>
</fieldset>
<br/>
<table width="80%" cellspacing="1" border="0" cellpadding="5">
    <tr>
        <th align="left">NAME</th>
        <th align="left">EMAIL</th>
        <th align="left">STATUS</th>
        <th colspan="3"></th>
    </tr>
   @foreach (var item in ViewBag.tlist)
   {
        <tr style="background-color:rgba(0,0,0,0.5);color:white;border-style:inset">
        <td height="30">@item.Name</td>
        <td height="30">@item.Email</td>
        <td height="20">@item.Status</td>
        <td width="70"><a href="/Admin/DetailsOfTransporter?email=@item.Email" style="color:skyblue">Detail</a></td>
        <td width="100"><a href="/Admin/TaskHistoryOfTransporter?id=@item.Id" style="color:skyblue">Task History</a></td>
        <td width="50"><a href="/Admin/EditTransporter?email=@item.Email" style="color:skyblue">Edit</a></td>
        <td width="50"><a href="/Admin/DeleteTransporter?email=@item.Email" style="color:skyblue">Delete</a></td>
       </tr>
       
       
   }
   
  
</table>

