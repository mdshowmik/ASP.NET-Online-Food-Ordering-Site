<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Fast-Food</title>
    <link rel="stylesheet" type="text/css" href="~/CSS/adminstyle.css">
</head>
<body>
<table width="100%" align="center" cellspacing="0" cellpadding="0">
    <tr style="background-color:#FF6347">
        <td valign="middle">
            <table width="100%" style="background-color:black;">
                <tr>
                    <td rowspan="2">
                        <a href='@Url.Action("Index", "Admin")'>
                            <img width="80px" src="~/image/logo.png">
                        </a>
                    </td>
                    
                     <td align="right">
                         <div id="menu">
                             </div>
                <div id="dropdown">
                       <ul>                          
                        <li><a href="#" style="color:white">Account</a>
                           <ul>
                            <li>@Html.ActionLink("ViewAccount", "ViewAccount", "Admin")</li>
                            <li>@Html.ActionLink("EditAccount", "EditAccount", "Admin")</li>
                            <li>@Html.ActionLink("ChangePassword", "ChangePassword", "Admin")</li>
                          </ul>
                        </li>
                       <li><a href="#" style="color:white">Search</a>
                           <ul>
                            <li>@Html.ActionLink("SearchAdmin", "SearchAdmin", "Admin", new { id=0},null)</li>
                            <li>@Html.ActionLink("SearchUser", "SearchUser", "Admin", new { id=0},null)</li>
                            <li>@Html.ActionLink("SearchRestaurant", "SearchRestaurant", "Admin", new { id=0},null)</li>
                            <li>@Html.ActionLink("SearchTransporter", "SearchTransporter", "Admin", new { id=0},null)</li>
                           </ul>
                          </li>
                        <li><a href="#" style="color:white">Create</a>
                           <ul>
                            <li>@Html.ActionLink("CreateAdmin", "CreateAdmin", "Admin")</li>
                            <li>@Html.ActionLink("CreateUser", "CreateUser", "Admin")</li>
                            <li>@Html.ActionLink("CreateRestaurant", "CreateRestaurant", "Admin")</li>
                            <li>@Html.ActionLink("CreateTransporter", "CreateTransporter", "Admin")</li>
                           </ul>
                          </li>
                        <li><a href="#" style="color:white">Report</a>
                           <ul>
                            <li>@Html.ActionLink("StatisticsReport", "StatisticsReport", "Admin")</li>
                            <li>@Html.ActionLink("ActivityReport", "ActivityReport", "Admin")</li>
                            <li>@Html.ActionLink("MembershipReport", "MembershipReport", "Admin")</li>
                            <li>@Html.ActionLink("SalesReport", "SalesReport", "Admin")</li>         
                           </ul>
                        </li>
                            <li>@Html.ActionLink("Logout", "Logout", "Admin")</li>         
                        </ul>
                 </div>
                      
                     </td>
                    
                </tr>                                 
                <tr>
                    <td>
                        @Html.ActionLink("CreateAdmin", "CreateAdmin", "Admin")
                    </td>
                </tr>
            </table>
        </td>
    </tr>
    <tr>
        <td align="center" style="padding-top:100px">
            @RenderBody()
            <br /><br /><br /><br>
        </td>
    </tr>
    <tr align="bottom">
        <td align="center">
            @Html.ActionLink("About Us", "Index", "Public")
            @Html.ActionLink("Contact", "Index", "Public")
        </td>
    </tr>
</table>
</body>
</html>
